<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="tech.dodd.paigow.MainKotlinActivity">
    <data>
        <variable
            name="handlers"
            type="tech.dodd.paigow.MainKotlinActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/eight_dp"
        android:paddingVertical="@dimen/sixteen_dp"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/TopLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/TopCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/eight_dp"
                android:weightSum="7">

                <TextView
                    android:id="@+id/Card1text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card1"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card2text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card2"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card3text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card3"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card4text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card4"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card5text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card5"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card6text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card6"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

                <TextView
                    android:id="@+id/Card7text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/CD_card7"
                    android:gravity="center"
                    android:onClick="@{handlers::doClick}"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTopCompat="@drawable/cardback" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Correct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/twentytwo_sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/TopButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <Button
                    android:id="@+id/iSolveButton"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{handlers::doClick}"
                    android:text="@string/isolvetext" />

                <Button
                    android:id="@+id/uSolveButton"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{handlers::doClick}"
                    android:text="@string/usolvetext" />

            </LinearLayout>
            
            <Button
                android:id="@+id/NextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handlers::doClick}"
                android:text="@string/nextbuttontext" />

        </LinearLayout>
    </LinearLayout>
</layout>
